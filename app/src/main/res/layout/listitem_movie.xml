<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/half_grid_unit"
    android:layout_marginLeft="@dimen/one_grid_unit"
    android:layout_marginRight="@dimen/one_grid_unit"
    android:layout_marginTop="@dimen/half_grid_unit"
    android:foreground="?android:attr/selectableItemBackground"
    tools:ignore="contentDescription"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/one_and_half_grid_unit">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/twelve_grid_unit"
            android:layout_height="@dimen/sixteen_grid_unit"
            android:background="@color/colorLightGrey"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/one_and_half_grid_unit"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/two_grid_unit"
                android:maxLines="2"
                android:textSize="@dimen/two_and_quarter_text_unit" />

            <TextView
                android:id="@+id/tv_popularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/one_and_three_quarter_text_unit" />

            <TextView
                android:id="@+id/tv_released"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/one_and_three_quarter_text_unit" />

            <TextView
                android:id="@+id/tv_original_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/one_and_three_quarter_text_unit" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/one_and_three_quarter_text_unit" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>